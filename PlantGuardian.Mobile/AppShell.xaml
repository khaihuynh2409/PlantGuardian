<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PlantGuardian.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PlantGuardian.Mobile.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <FlyoutItem Title="Dashboard" Icon="dashboard.png">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" Route="DashboardPage" />
    </FlyoutItem>

    <FlyoutItem Title="My Garden" Icon="plant.png">
        <ShellContent ContentTemplate="{DataTemplate views:PlantListPage}" Route="PlantListPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="AI Assistant" Icon="chat.png">
        <ShellContent ContentTemplate="{DataTemplate views:ChatPage}" Route="ChatPage" />
    </FlyoutItem>

    <!-- Bean-specific Pages (registered as routes, not flyout items) -->
    <Shell.Resources>
        <ResourceDictionary/>
    </Shell.Resources>

    <MenuItem Text="Đăng xuất" Command="{Binding LogoutCommand}" />
</Shell>
