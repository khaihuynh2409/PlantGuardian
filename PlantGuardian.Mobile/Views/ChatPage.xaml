<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PlantGuardian.Mobile.ViewModels"
             x:Class="PlantGuardian.Mobile.Views.ChatPage"
             Title="AI Assistant">

    <Grid RowDefinitions="*,Auto" Padding="10">
        <CollectionView ItemsSource="{Binding Messages}" Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout HorizontalOptions="{Binding Alignment}" Margin="5">
                        <Frame BackgroundColor="{Binding Color}" Padding="10" CornerRadius="10">
                            <Label Text="{Binding Text}" TextColor="Black" LineBreakMode="WordWrap" MaximumWidthRequest="250" />
                        </Frame>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="10" Margin="0,10,0,0">
            <Entry Grid.Column="0" Text="{Binding UserMessage}" Placeholder="Ask about your plants..." />
            <Button Grid.Column="1" Text="Send" Command="{Binding SendMessageCommand}" />
        </Grid>
    </Grid>
</ContentPage>
