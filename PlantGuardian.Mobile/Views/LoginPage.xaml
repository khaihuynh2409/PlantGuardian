<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PlantGuardian.Mobile.ViewModels"
             x:Class="PlantGuardian.Mobile.Views.LoginPage"
             Title="Plant Guardian Login">

    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

        <Image Source="dotnet_bot.svg" HeightRequest="200" HorizontalOptions="Center" />

        <Label Text="Welcome Back!" FontSize="32" HorizontalOptions="Center" />

        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        
        <Label Text="{Binding StatusMessage}" TextColor="Red" />

        <Button Text="Login" Command="{Binding LoginCommand}" />
        
        <Label Text="Chưa có tài khoản? Đăng ký ngay" TextColor="Blue" TextDecorations="Underline" HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoToRegisterCommand}" />
            </Label.GestureRecognizers>
        </Label>
        
    </VerticalStackLayout>
</ContentPage>
